pipeline {
  agent any

  environment {
    DEPLOY_USER = 'vagrant'
    DEPLOY_HOST = '192.168.56.23'
    DEPLOY_DIR  = '/home/vagrant/django_git/mysite'
    REPO_URL    = 'https://github.com/rookiesis/django-test.git'
    BRANCH      = 'master'
    SSH_CRED_ID = 'deploy-ssh-key'   // Jenkins에 만든 credentials ID
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Run Remote Deploy') {
      steps {
        sshagent (credentials: [env.SSH_CRED_ID]) {
          // 배포 스크립트가 레포에 있으므로 원격에서 바로 실행
sh """
ssh -o StrictHostKeyChecking=no ${DEPLOY_USER}@${DEPLOY_HOST} \
"mkdir -p ${DEPLOY_DIR} && \
 cd ${DEPLOY_DIR} && \
 curl -s -o /tmp/deploy_remote.sh https://raw.githubusercontent.com/rookiesis/django-test/mysite/${BRANCH}/scripts/deploy_remote.sh && \
 chmod +x /tmp/deploy_remote.sh && \
 /tmp/deploy_remote.sh"
"""
        }
      }
    }
  }

  post {
    success { echo "Deployment succeeded" }
    failure { echo "Deployment failed" }
  }
}
